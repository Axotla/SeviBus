<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/fragment_main_contenido"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        >

        <FrameLayout
            android:id="@+id/fragment_main_favoritas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@+id/fragment_main_firstrun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@+id/fragment_main_newversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ViewStub
            android:id="@+id/fragment_main_share_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inflatedId="@+id/fragment_main_compartir"
            android:layout="@layout/fragment_main_share"/>

        <FrameLayout
            android:id="@+id/fragment_main_paradas_cercanas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@+id/fragment_main_lineas_cercanas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>