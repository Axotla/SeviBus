<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_main_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_main_contenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        ptr:ptrDrawable="@android:color/transparent"
        ptr:ptrHeaderTextAppearance="@style/PullToRefreshTextStyle"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/fragment_main_map_trigger"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_map_height"
                android:clickable="true"/>

            <FrameLayout
                android:layout_height="wrap_content"
                android:background="@drawable/bg_main_middle"
                android:id="@+id/fragment_main_favoritas"
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:animateLayoutChanges="true"
                android:background="@color/window_background"
                >

                <FrameLayout
                    android:id="@+id/fragment_main_firstrun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <FrameLayout
                    android:id="@+id/fragment_main_newversion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <ViewStub
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout="@layout/fragment_main_share"
                    android:id="@+id/fragment_main_share_stub"
                    android:inflatedId="@+id/fragment_main_compartir"
                    android:layout_marginTop="16dp"/>

                <FrameLayout
                    android:id="@+id/fragment_main_paradas_cercanas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <FrameLayout
                    android:id="@+id/fragment_main_lineas_cercanas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</FrameLayout>