<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_background_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dip" >

    <com.sloy.sevibus.ui.widgets.LineaBadge
        android:id="@+id/item_linea_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dip" />

    <TextView
        android:id="@+id/item_linea_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_linea_numero"
        android:layout_toLeftOf="@+id/item_linea_hora_inicio"
        android:text="Pgno. Norte - Glorieta Plus Ultra"
        android:textSize="17sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/item_linea_hora_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif-condensed"
        android:text="05:34"
        android:textColor="#666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_linea_hora_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_linea_hora_inicio"
        android:fontFamily="sans-serif-condensed"
        android:text="00:12"
        android:textColor="#666"
        android:textSize="12sp" />

</RelativeLayout>