<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/main_favoritas_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/favoritas_main_cargando"
            android:textSize="17sp"
            android:textColor="#ff6f6f6f"
            android:gravity="center"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/main_favoritas_contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:visibility="visible"
            >

            <LinearLayout
                android:id="@+id/favoritas_main_1"
                style="@style/MainFavoritaLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/favoritas_main_numero"
                    style="@style/MainFavoritaTexto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="@dimen/main_favorita_text_size_3"
                    />

                <View
                    android:id="@+id/favoritas_main_color"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#669900"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/favoritas_main_2"
                style="@style/MainFavoritaLayout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/favoritas_main_numero"
                    style="@style/MainFavoritaTexto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="@dimen/main_favorita_text_size_3"/>

                <View
                    android:id="@+id/favoritas_main_color"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#9933CC"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/favoritas_main_3"
                style="@style/MainFavoritaLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/favoritas_main_numero"
                    style="@style/MainFavoritaTexto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="64"
                    android:textSize="@dimen/main_favorita_text_size_3"
                    />

                <View
                    android:id="@+id/favoritas_main_color"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#0099CC"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/favoritas_main_4"
                style="@style/MainFavoritaLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/favoritas_main_numero"
                    style="@style/MainFavoritaTexto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="106"
                    android:textSize="@dimen/main_favorita_text_size_3"
                    />

                <View
                    android:id="@+id/favoritas_main_color"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#FF8800"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/main_favoritas_boton_mas"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:scaleType="center"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_favoritas_overflow"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>